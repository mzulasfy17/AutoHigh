<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Porschee"
    android:background="@drawable/whatsapp_image_2024_03_10_at_10_08_15_pm"
    android:orientation="vertical">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:text="" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please select the car type!"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:text="" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/a918"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/_18"
            android:layout_margin="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="918 Spyder"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country : Germany"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Speed = 345KM/H"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Volume Engine = 4593 cm3"
                android:textColor="@color/black"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/a911"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/_11_targa"
            android:layout_margin="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>

            <TextView
                android:id="@+id/a9112"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="911 Targa"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/a9113"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country : Germany"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/a9114"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Speed = 289-304KM/H"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/a9115"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volume Engine = 2981 cm3"
                android:textColor="@color/black"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cayman"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/cayman_gt"
            android:layout_margin="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>

            <TextView
                android:id="@+id/cayman1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cayman Gt"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/cayman2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country : Germany"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/cayman3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Speed = 302-304KM/H"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/cayman4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volume Engine = 3995 cm3"
                android:textColor="@color/black"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/taycan"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/taycan"
            android:layout_margin="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>

            <TextView
                android:id="@+id/taycan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Taycan"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/taycan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country : Germany"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/taycan3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Speed = 230-260KM/H"
                android:textColor="@color/black" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/carrera"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/carrera"
            android:layout_margin="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>

            <TextView
                android:id="@+id/carrera1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Carrera GT"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/carrera2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country : Germany"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/carrera3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Speed = 330KM/H"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/carrera4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volume Engine = 5733 cm3"
                android:textColor="@color/black"/>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>